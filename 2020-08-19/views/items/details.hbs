<div class="offer-details">
    <h1>{{ name }}</h1>
    <div class="info">
        <img src="{{ imageUrl }}" alt="">
        <div class="description">{{ description }}
            <br>
            <br>
            <p> <strong>Buyers:</strong> {{ peopleWhoIncremented }}</p>
            <br>
            <p class="price">${{ price }}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isCreator}}
            <a href="/edit/{{ _id }}">Edit</a>
            <a href="/delete/{{ _id}}">Delete</a>
        {{else}}

            {{#if isAlreadyIncremented}}
                <span>You bought it</span>
            {{else}}
                <a href="/increment/{{ _id }}">Buy</a>
            {{/if}}
        {{/if}}
    </div>
</div>